<div class="container">
	<div class="row">
		<div class = "col s12 m6 offset-m3 center">

		<h3>Hi, I'm Comby :)</h3>

		<img src="/img/kentcomb.png" class = "responsive-img">

		  <form action="/" method="POST">
		  	<div class="input-field">
		      <input type="text" name="first_name" value="<%= @first_name %>" required placeholder="Enter First Name"/>
		      <input type="text" name="last_name" value="<%= @last_name %>"required  placeholder="Enter Last Name" />
		 			<input type="text" name="domain" value="<%= @domain %>" required placeholder="Enter Domain" />
		 			<input type="submit" value="Run Comby!" id="runButton" class="btn btn-small btn-block btn-primary">
		 		</div>
  		</form>

		<h3 id="combsays" style="display: none">Comby says...</h3>

		<div class="preloader-wrapper big active" style="display: none">
		  <div class="spinner-layer spinner-blue-only">
		    <div class="circle-clipper left">
		      <div class="circle"></div>
		    </div><div class="gap-patch">
		      <div class="circle"></div>
		    </div><div class="circle-clipper right">
		      <div class="circle"></div>
		    </div>
		  </div>
		</div>

		<div id="results" class="centered">
		    <% if @emails_and_validity  %>
					<ul id="staggered-test">
		      <% @emails_and_validity.each do |result| %>
		        	<li><%= result %></li>
		      <% end %>
					</ul>
		    <% end %>
		</div>
</div>
